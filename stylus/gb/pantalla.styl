// pantalla
.pantalla
	position absolute
	top 3em
	left 50%
	transform translateX(-50%)
	background-color $c_pantalla_fondo
	width 20.5em
	height 15em
	border-radius .5em .5em 3em .5em
	box-sizing border-box
	border .35em solid $negro
	&:before, &:after
		content ''
		position absolute
		left 50%
		transform translateX(-50%)
		width 18em
	&:before
		background-color $morado2
		top .5em
		height .2em
	&:after
		background-color $morado1
		top 1em
		height .15em
	.principal
		position absolute
		top 50%
		left 50%
		width 13em
		height 11em
		box-sizing border-box
		transform translate(-50%, -50%)
		background-color $c_pantalla_principal
		border .2em solid $negro
		border-radius .25em
		z-index 2
		&:before
			content 'Dot matrix with stereo sound'
			text-transform uppercase
			font-size .55em
			font-weight bold
			color darken(white, 15)
			position absolute
			top -2.6em
			right -1em
			box-sizing border-box
			padding .2em .75em
			background-color $c_pantalla_fondo
	.bateria
		position absolute
		top 5em
		left .9em
		width .85em
		height .85em
		border-radius 50%
		background-color $c_bateria
		span
			position absolute
			top 2.8em
			left -1em
			font-size .45em
			text-transform uppercase
			color darken(white, 15)
			font-weight bold
			line-height 100%
	.logo
		position absolute
		top 103%
		left 0
		color $c_logo
		font-weight bold
		letter-spacing -.05em
		span
			font-size 1.25em
			font-style italic
			font-weight normal
			text-transform uppercase
			&:before
				content 'TM'
				position absolute
				bottom .15em
				left 100%
				font-style normal
				font-weight bold
				font-size .5em