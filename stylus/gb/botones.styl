// botones B y A
.botones
	background-color $plomo2
	position absolute
	bottom 10.5em
	right 1.5em
	padding .5em .6em
	border-radius 3em
	transform rotate(-25deg)
	font-size .95em
	.boton
		background-color $guinda
		float left
		width 3.5em
		height 3.5em
		border-radius 50%
		box-sizing border-box
		border .35em solid $negro
		position relative
		&:before
			position absolute
			top 130%
			left 50%
			transform translateX(-50%)
			color lighten(black, 40)
			text-transform uppercase
			font-weight bold
			font-size 1em
		&:first-child
			margin-right 1em
			&:before
				content 'B'
		&:last-child
			&:before
				content 'A'