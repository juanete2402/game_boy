// estilos
body
	background-color $fondo
	font-family verdana

// cuerpo del game boy
.gb
	position absolute
	font-size $fz
	background-color $plomo1
	width 24em
	height 37em
	top 50%
	left 50%
	transform translate(-50%, -50%)
	border-radius 1em 1em 6em 1em
	box-shadow 3em 2em 0 alpha($negro, .5)
	overflow hidden
	border .5em solid $negro
	&:before, &:after
		content ''
		position absolute
	&:before
		left 0
		bottom 0
		width 100%
		height 1em
		background-color $plomo2
	&:after
		right -2em
		bottom 0
		background-color $plomo2
		width 11em
		height 3.5em
		transform rotate(-25deg)


// zona de encendido/apagado
.power
	position absolute
	top 0
	left 0
	width 100%
	height 2em
	border-bottom .35em solid $plomo2
	&:before, &:after
		content ''
		position absolute
		width .35em
		background-color $plomo2
		height 100%
		top 0
	&:before
		left 2.15em
	&:after
		right 2.15em
	.on-off
		position absolute
		top .8em
		left 4em
		background-color $plomo2
		width 5.5em
		font-size .8em
		height 1em
		border-radius 1em
		span.linea
			position absolute
			width .55em
			background-color $plomo2
			height 1em
			bottom 98%
			display block
			&:nth-child(1)			
				left .75em
			&:nth-child(2)			
				left 1.65em
			&:nth-child(3)			
				left 2.55em
				
				
// pantalla
.pantalla
	position absolute
	top 3em
	left 50%
	transform translateX(-50%)
	background-color $c_pantalla_fondo
	width 20.5em
	height 15em
	border-radius .5em .5em 3em .5em
	box-sizing border-box
	border .35em solid $negro
	&:before, &:after
		content ''
		position absolute
		left 50%
		transform translateX(-50%)
		width 18em
	&:before
		background-color $morado2
		top .5em
		height .2em
	&:after
		background-color $morado1
		top 1em
		height .15em
	.principal
		position absolute
		top 50%
		left 50%
		width 13em
		height 11em
		box-sizing border-box
		transform translate(-50%, -50%)
		background-color $c_pantalla_principal
		border .2em solid $negro
		border-radius .25em
		z-index 2
		&:before
			content 'Dot matrix with stereo sound'
			text-transform uppercase
			font-size .55em
			font-weight bold
			color darken(white, 15)
			position absolute
			top -2.6em
			right -1em
			box-sizing border-box
			padding .2em .75em
			background-color $c_pantalla_fondo
	.bateria
		position absolute
		top 5em
		left .9em
		width .85em
		height .85em
		border-radius 50%
		background-color $c_bateria
		span
			position absolute
			top 2.8em
			left -1em
			font-size .45em
			text-transform uppercase
			color darken(white, 15)
			font-weight bold
			line-height 100%
	.logo
		position absolute
		top 103%
		left 0
		color $c_logo
		font-weight bold
		letter-spacing -.05em
		span
			font-size 1.25em
			font-style italic
			font-weight normal
			text-transform uppercase
			&:before
				content 'TM'
				position absolute
				bottom .15em
				left 100%
				font-style normal
				font-weight bold
				font-size .5em


// cruz
.cruz
	position absolute
	bottom 9.5em
	left 1.8em
	width 6.5em
	height 6.5em
	z-index 2
	font-size .95em
	&.sombra
		z-index 1
		&:before, &:after
			border-radius .5em
			background-color $plomo2
		&:before
			height 50%
			width 112%
		&:after
			width 50%
			height 112%
	&:before, &:after, span.circulo
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
	&:before, &:after
		content ''
		background-color $plomo3
		border-radius .25em
	&:before
		width 100%
		height 38%
	&:after
		width 38%
		height 100%
	span.circulo
		background-color lighten(black, 25)
		border-radius 50%
		width 28%
		height 28%
		display block
		z-index 1
	.tri
		position absolute
		border-left .3em solid transparent
		border-right .3em solid transparent
		border-bottom .4em solid darken($plomo2, 5)
		z-index 1
		&.up, &.bottom
			left 50%
		&.right, &.left
			top 50%
		&.up
			top -1em
			transform translateX(-50%) rotate(0)
		&.right
			right -1.1em
			transform translateY(-50%) rotate(90deg)
		&.bottom
			bottom -1em
			transform translateX(-50%) rotate(180deg)
		&.left
			left -1.1em
			transform translateY(-50%) rotate(270deg)

// opciones: select y start
.opciones
	position absolute
	bottom 5em
	left 6.5em
	.boton
		transform rotate(-25deg)
		width 3.25em
		border-radius 1em
		height .8em
		background-color lighten(black, 30)
		float left
		border .35em solid $plomo2
		position relative
		&:before
			position absolute
			top 150%
			left 50%
			transform translateX(-50%)
			color lighten(black, 40)
			text-transform uppercase
			font-weight bold
			font-size .7em
		&:first-child
			margin-right .5em
			&:before
				content 'Select'
		&:last-child
			&:before
				content 'Start'

// botones B y A
.botones
	background-color $plomo2
	position absolute
	bottom 10.5em
	right 1.5em
	padding .5em .6em
	border-radius 3em
	transform rotate(-25deg)
	font-size .95em
	.boton
		background-color $guinda
		float left
		width 3.5em
		height 3.5em
		border-radius 50%
		box-sizing border-box
		border .35em solid $negro
		position relative
		&:before
			position absolute
			top 130%
			left 50%
			transform translateX(-50%)
			color lighten(black, 40)
			text-transform uppercase
			font-weight bold
			font-size 1em
		&:first-child
			margin-right 1em
			&:before
				content 'B'
		&:last-child
			&:before
				content 'A'


// audio salida
.audio
	$pos_shadow = -1.25em
	$col_shadow = alpha($negro, .1)
	position absolute
	bottom 3.25em
	right 1.75em
	width .5em
	height 3.5em
	background-color $col_shadow
	transform rotate(-25deg)
	border-radius 1em
	z-index 2
	box-shadow 	$pos_shadow*1 0 0 0 $col_shadow,
					$pos_shadow*2 0 0 0 $col_shadow,
					$pos_shadow*3 0 0 0 $col_shadow,
					$pos_shadow*4 0 0 0 $col_shadow,
					$pos_shadow*5 0 0 0 $col_shadow