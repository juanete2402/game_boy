// generales
body
	background-color $fondo
	font-family verdana

// cuerpo del game boy
.gb
	position absolute
	font-size $fz
	background-color $plomo1
	width 24em
	height 37em
	top 50%
	left 50%
	transform translate(-50%, -50%)
	border-radius 1em 1em 6em 1em
	box-shadow 3em 2em 0 alpha($negro, .5)
	overflow hidden
	border .5em solid $negro
	&:before, &:after
		content ''
		position absolute
	&:before
		left 0
		bottom 0
		width 100%
		height 1em
		background-color $plomo2
	&:after
		right -2em
		bottom 0
		background-color $plomo2
		width 11em
		height 3.5em
		transform rotate(-25deg)
		
// animaciones
.bateria
	animation anim_bateria 2s ease-in-out infinite
@keyframes anim_bateria
	0%, 100%
		background-color $c_bateria
		box-shadow none
	50%
		box-shadow 0 0 10px 5px alpha(lighten($c_bateria, 20), .3)
		background-color lighten($c_bateria, 20)
		
.gb
	animation anim_gb 3s ease-in infinite
@keyframes anim_gb
	0%, 100%
		transform translate(-50%, -50%)
	50%
		transform translate(-50%, -50%) rotate(6deg)