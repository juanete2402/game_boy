// generales
body
	background-color $fondo
	font-family verdana

// cuerpo del game boy
.gb
	position absolute
	font-size $fz
	background-color $plomo1
	width 24em
	height 37em
	top 50%
	left 50%
	transform translate(-50%, -50%)
	border-radius 1em 1em 6em 1em
	box-shadow 3em 2em 0 alpha($negro, .5)
	overflow hidden
	border .5em solid $negro
	&:before, &:after
		content ''
		position absolute
	&:before
		left 0
		bottom 0
		width 100%
		height 1em
		background-color $plomo2
	&:after
		right -2em
		bottom 0
		background-color $plomo2
		width 11em
		height 3.5em
		transform rotate(-25deg)