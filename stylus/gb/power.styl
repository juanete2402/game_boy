// zona de encendido/apagado
.power
	position absolute
	top 0
	left 0
	width 100%
	height 2em
	border-bottom .35em solid $plomo2
	&:before, &:after
		content ''
		position absolute
		width .35em
		background-color $plomo2
		height 100%
		top 0
	&:before
		left 2.15em
	&:after
		right 2.15em
	.on-off
		position absolute
		top .8em
		left 4em
		background-color $plomo2
		width 5.5em
		font-size .8em
		height 1em
		border-radius 1em
		span.linea
			position absolute
			width .55em
			background-color $plomo2
			height 1em
			bottom 98%
			display block
			&:nth-child(1)			
				left .75em
			&:nth-child(2)			
				left 1.65em
			&:nth-child(3)			
				left 2.55em