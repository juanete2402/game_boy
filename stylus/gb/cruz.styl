// cruz
.cruz
	position absolute
	bottom 9.5em
	left 1.8em
	width 6.5em
	height 6.5em
	z-index 2
	font-size .95em
	&.sombra
		z-index 1
		&:before, &:after
			border-radius .5em
			background-color $plomo2
		&:before
			height 50%
			width 112%
		&:after
			width 50%
			height 112%
	&:before, &:after, span.circulo
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
	&:before, &:after
		content ''
		background-color $plomo3
		border-radius .25em
	&:before
		width 100%
		height 38%
	&:after
		width 38%
		height 100%
	span.circulo
		background-color lighten(black, 25)
		border-radius 50%
		width 28%
		height 28%
		display block
		z-index 1
	.tri
		position absolute
		border-left .3em solid transparent
		border-right .3em solid transparent
		border-bottom .4em solid darken($plomo2, 5)
		z-index 1
		&.up, &.bottom
			left 50%
		&.right, &.left
			top 50%
		&.up
			top -1em
			transform translateX(-50%) rotate(0)
		&.right
			right -1.1em
			transform translateY(-50%) rotate(90deg)
		&.bottom
			bottom -1em
			transform translateX(-50%) rotate(180deg)
		&.left
			left -1.1em
			transform translateY(-50%) rotate(270deg)